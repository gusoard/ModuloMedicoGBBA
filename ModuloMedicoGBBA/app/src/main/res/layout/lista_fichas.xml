<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="gustavorivera.proyectogrado.gbba.modulomedicogbba.ListaFichas">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_padding"
        android:layout_below="@+id/appbarlayout">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/listafichas_texto_nombre"
            android:id="@+id/listaficha_nombre"
            android:textSize="@dimen/size_nombre_sujeto"
            android:layout_gravity="center_horizontal" />


        <View
            android:id="@+id/lineahor"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:padding="@dimen/activity_padding"/>

        <ListView
            android:padding="@dimen/activity_padding"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listaficha_listview"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>



</RelativeLayout>
